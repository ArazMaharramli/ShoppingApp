@model ShoppingApp.Web.UI.Areas.Admin.ViewModels.EditCategoryViewModel


@section Scripts{
    <script>$('#SelectedParentCategoryId').select2({
            placeholder: "Select parent"
        });
        $('#SelectedChildrenCategoryIds').select2({
            placeholder: "Select subcategories"
        });</script>

}
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Category Edit
        </h3>
    </div>
    <!--begin::Form-->
    <form class="form" method="post">
        <div class="card-body">
            <div asp-validation-summary="All"></div>
            <div class="form-group row">
                <label class="col-form-label text-right col-lg-3 col-sm-12" asp-for="CategoryName"></label>
                <div class=" col-lg-4 col-md-9 col-sm-12">
                    <input class="form-control form-control-solid" asp-for="CategoryName" placeholder="Category Name" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label text-right col-lg-3 col-sm-12" asp-for="CategorySlug"></label>
                <div class=" col-lg-4 col-md-9 col-sm-12">
                    <input class="form-control form-control-solid" asp-for="CategorySlug" placeholder="Category Slug" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label text-right col-lg-3 col-sm-12" asp-for="SelectedParentCategoryId"></label>
                <div class=" col-lg-4 col-md-9 col-sm-12">
                    <select class="form-control" asp-for="SelectedParentCategoryId" asp-items="Model.Categories">
                        <option>-- None --</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label text-right col-lg-3 col-sm-12" asp-for="SelectedChildrenCategoryIds"></label>
                <div class=" col-lg-4 col-md-9 col-sm-12">
                    <select class="form-control" asp-for="SelectedChildrenCategoryIds" asp-items="Model.Categories">
                    </select>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button type="reset" class="btn btn-secondary">Cancel</button>
        </div>
    </form>
</div>