@model ShoppingApp.Web.UI.ViewModels.Account.ResetPasswordViewModel
@{ ViewData["Title"] = "Reset Password";
    Layout = "/Views/Shared/_AccountLayout.cshtml"; }

@section Styles{
    <link href="assets/css/pages/login/login-3.css" rel="stylesheet" type="text/css" />
}

@section metaTags{}

@section Scripts{}

<!--begin::Login-->
<div class="login login-3 wizard d-flex flex-column flex-lg-row flex-column-fluid">
    <!--begin::Aside-->
    <div class="login-aside d-flex flex-column flex-row-auto">

        <!--begin::Aside Bottom-->
        <div class="aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-x-center" style="background-position-y: calc(100% + 5rem); background-image: url(assets/media/svg/illustrations/login-visual-5.svg)"></div>
        <!--end::Aside Bottom-->
    </div>
    <!--begin::Aside-->
    <!--begin::Content-->
    <div class="login-content flex-row-fluid d-flex flex-column p-10">
        <!--begin::Top-->
        <div class="text-right d-flex justify-content-center">
            <div class="top-signin text-right d-flex justify-content-end pt-5 pb-lg-0 pb-10">
                <span class="font-weight-bold text-muted font-size-h4">Having issues?</span>
                <a href="javascript:;" class="font-weight-bold text-primary font-size-h4 ml-2" id="kt_login_signup">Get Help</a>
            </div>
        </div>
        <!--end::Top-->
        <!--begin::Wrapper-->
        <div class="d-flex flex-row-fluid flex-center">
            <!--begin::Signin-->
            <div class="login-form">
                <!--begin::Form-->
                <form class="form" id="kt_login_singin_form" method="post">
                    <!--begin::Title-->
                    <div class="pb-5 pb-lg-15">
                        <h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Reset Password</h3>
                        <div class="text-muted font-weight-bold font-size-h4">
                            New Here?
                            <a asp-controller="Account" asp-action="register" asp-area="" class="text-primary font-weight-bolder">Create Account</a>
                        </div>
                    </div>
                    <!--begin::Title-->
                    <div asp-validation-summary="All"></div>

                    <!--begin::Form group-->
                    <div class="form-group">
                        <label class="font-size-h6 font-weight-bolder text-dark">Password</label>
                        <input asp-for="Password" class="form-control h-auto py-7 px-6 rounded-lg border-0" />
                    </div>
                    <!--end::Form group-->
                    <!--begin::Form group-->
                    <div class="form-group">
                        <label class="font-size-h6 font-weight-bolder text-dark">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control h-auto py-7 px-6 rounded-lg border-0" />
                    </div>
                    <!--end::Form group-->

                    <input type="hidden" asp-for="Code" class="form-control h-auto py-7 px-6 rounded-lg border-0" />
                    <input type="hidden" asp-for="UserId" class="form-control h-auto py-7 px-6 rounded-lg border-0" />
                    <input type="hidden" asp-for="Email" class="form-control h-auto py-7 px-6 rounded-lg border-0" />

                    <!--begin::Action-->
                    <div class="pb-lg-0 pb-5">
                        <button type="submit" id="kt_login_singin_form_submit_button" class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">Submit</button>
                    </div>
                    <!--end::Action-->
                </form>
                <!--end::Form-->
            </div>
            <!--end::Signin-->
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Content-->
</div>
<!--end::Login-->